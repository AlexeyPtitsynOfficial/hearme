<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
	<ProgressBar 
	    android:id="@+id/load"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_centerInParent="true"
	    />
    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:scrollbars="none"
        android:visibility="gone"
        >
	   <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="left"
	        android:padding="4dp"
	        >
	        <androidx.cardview.widget.CardView
	            android:id="@+id/guest_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:padding="10dp"
		        	android:orientation="vertical"
		            >
			        <TextView 
			            android:id="@+id/ad_guest_name"
			            android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/ad_guest_name"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium"
			            />
			        <EditText 
			            android:id="@+id/edit_guest_name"
			            android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:maxLength="50"
				        android:inputType="text" 
			            />
		        </LinearLayout>
			</androidx.cardview.widget.CardView>
	        <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        
		        <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:padding="10dp"
		        	android:orientation="vertical"
		            >
				    <TextView
				        android:id="@+id/ad_title"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/ad_title"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" 
				        />
				
				    <EditText
				        android:id="@+id/edit_title"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:maxLength="50"
				        android:inputType="text" 
				        android:hint="@string/necessarily"
				        >
				        <requestFocus />
				    </EditText>
			    </LinearLayout>
		    </androidx.cardview.widget.CardView>
		    <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:padding="10dp"
		            >
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:text="Тип объявления"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
					<RadioGroup
					    android:id="@+id/radio_ad_type"
					    android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
					    >
					    <RadioButton 
					        android:id="@+id/free"
					        android:layout_width="wrap_content"
				       	 	android:layout_height="wrap_content"
				       	 	android:text="Бесплатное"
				       	 	android:checked="true"
					        />
					    <RadioButton 
					        android:id="@+id/pay"
					        android:layout_width="wrap_content"
				       	 	android:layout_height="wrap_content"
				       	 	android:text="Платное"
				       	 	android:enabled="false"
					        />
					</RadioGroup>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			
		    <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        <LinearLayout
		            android:id="@+id/layout"
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:padding="10dp"
		            >
				    <Spinner
				        android:id="@+id/spinner_area"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content" 
				        android:prompt="@string/select_area"/>
				    <View
			            android:layout_width="70dp"
			            android:layout_height="2dp"
			            android:background="@android:color/darker_gray"
			            android:layout_margin="15dp"
			            android:layout_gravity="center_horizontal"
			            />
					<Button
						android:id="@+id/cat_chooser"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/select_category"
						android:textColor="@android:color/white"
						android:textSize="10sp"
						/>
			    </LinearLayout>
		    </androidx.cardview.widget.CardView>
			
		     <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:padding="10dp"
		            >
				    <TextView
				        android:id="@+id/ad_main_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:text="@string/ad_desc"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				
				    <EditText
				        android:id="@+id/edit_ad_desc"
				        android:layout_width="match_parent"
				        android:layout_height="200dp"
				        android:ems="10"
				        android:gravity="top"
				        android:hint="@string/necessarily"
				        android:inputType="textMultiLine" />
		    	</LinearLayout>
		    </androidx.cardview.widget.CardView>
		    <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:padding="10dp"
		            >
				    <TextView
					        android:id="@+id/ad_phone_num_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="10dp"
					        android:text="@string/ad_phone_num"
					        android:textColor="@color/night_green"
					        android:textStyle="bold"
					        android:textAppearance="?android:attr/textAppearanceMedium" />
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        >
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="+7"
					        android:textColor="@color/night_green"
					        android:textAppearance="?android:attr/textAppearanceMedium" />
					     <EditText 
					        android:id="@+id/phone_num"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:inputType="phone"
					        android:maxLines="1"
					        android:maxLength="13"
					        android:hint="(***) ***-**-**"
					        android:textSize="18sp"
					        />
				     </LinearLayout>
				     <TextView
					        android:id="@+id/ad_email_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginTop="10dp"
					        android:text="@string/ad_add_email"
					        android:textColor="@color/night_green"
					        android:textStyle="bold"
					        android:textAppearance="?android:attr/textAppearanceMedium" />
				     <EditText 
					        android:id="@+id/edit_email"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:inputType="textEmailAddress"
					        android:hint="example@mail.ru"
					        android:textSize="18sp"
					        />
		    	</LinearLayout>
		    </androidx.cardview.widget.CardView>
		    <androidx.cardview.widget.CardView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
		        <LinearLayout
		            android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical"
		        	android:padding="10dp"
		            >
				    <TextView
				        android:id="@+id/imade_add_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:text="@string/ad_image"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				   
			    	<LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:gravity="center_vertical"
				            android:orientation="horizontal" >
					        
					    <com.donearh.hearme.CustomImageScroller
					        android:id="@+id/image_scroller"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        >
					        <LinearLayout
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:orientation="horizontal" >
					        </LinearLayout>
					    </com.donearh.hearme.CustomImageScroller>
				    	<ImageButton 
					        android:id="@+id/image_add_btn"
					        android:layout_width="70dp"
					        android:layout_height="70dp"
					        android:layout_margin="10dp"
					        android:background="@drawable/selector_circle_button2"
					        android:src="@drawable/icon_ad_add"
					        />
			    	</LinearLayout>
	    		</LinearLayout>
		    </androidx.cardview.widget.CardView>
		    <androidx.cardview.widget.CardView
		        android:id="@+id/policy_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout 
			        android:layout_width="match_parent"
			   	 	android:layout_height="wrap_content"
			   	 	android:orientation="vertical"
			   	 	android:padding="10dp"
			        >
				    <CheckBox 
				        android:id="@+id/confirm_policy"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/confirm_policy"
				        />
		    	</LinearLayout>
	        </androidx.cardview.widget.CardView>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
	    android:id="@+id/bottom_layout"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_alignParentBottom="true"
	    android:visibility="gone"
	    android:gravity="center" >

	    <Button 
	        android:id="@+id/confirm_add"
	        android:layout_width="200dp"
	    	android:layout_height="50dp"
	    	android:textColor="@android:color/white"
	    	android:textSize="14sp"
	    	android:textStyle="bold"
	    	android:text="@string/btn_add"
	    	android:background="@drawable/selector_button"
	        />
	    <ProgressBar 
	        android:id="@+id/add_progress"
	        android:layout_width="40dp"
	    	android:layout_height="40dp"
	    	android:visibility="gone"
	        />
	    
	</LinearLayout>

</RelativeLayout>