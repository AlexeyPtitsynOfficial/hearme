 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     	android:id="@+id/tree_item_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:listSelector="@android:color/transparent"
	    android:orientation="vertical"
	    android:animateLayoutChanges="true"
     >
     <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
         >
         <LinearLayout 
             android:layout_width="34dp"
			 android:layout_height="34dp"
			 android:layout_marginLeft="7dp"
			 android:gravity="center"
			 android:orientation="vertical"
             >
	         <RelativeLayout 
	             android:id="@+id/cat_icon_layout"
	             android:layout_width="34dp"
			     android:layout_height="34dp"
			     android:gravity="center"
	             >
	             <View 
	                android:id="@+id/cat_icon_back"
				    android:layout_width="36dp"
				    android:layout_height="36dp"
				    android:background="@drawable/pulse_white_circle"
				    android:layout_centerInParent="true"
		    	/>
	             <com.donearh.hearme.RecyclingImageView
				    android:id="@+id/cat_icon"
				    android:layout_width="32dp"
				    android:layout_height="32dp"
				    android:scaleType="fitXY"
				    android:src="@drawable/icon_ad_add"
				    android:layout_centerInParent="true"
				    android:contentDescription="@string/icon_desc"
			    />
	         </RelativeLayout>
         
		</LinearLayout>
		   
		<TextView 
		    android:id="@+id/text1"
		    android:layout_width="170dp"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:paddingLeft="7dp"
		    android:paddingRight="5dp"
		    android:textSize="16sp"
		    android:textColor="#fff"
		    android:minHeight="50dp"/>
		<LinearLayout 
	        android:layout_width="60dp"
	    	android:layout_height="match_parent"
	    	android:orientation="horizontal"
	    	android:gravity="center"
	         >
			<ImageView
			    android:id="@+id/tree_icon"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:gravity="center_vertical"
			    android:scaleType="fitXY"
			    android:contentDescription="@string/icon_desc"
			    />
		</LinearLayout>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:background="@android:color/black"
	    />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:background="#1f7372"
	    />
	

    </LinearLayout>