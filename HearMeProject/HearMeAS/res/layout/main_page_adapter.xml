<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:id="@+id/layout"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
	    >
	    <TextView
	        android:id="@+id/content_text"
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:textSize="16sp"
    		android:layout_marginLeft="15dp"
	    	android:layout_marginRight="15dp"
    		>
	    </TextView>
	   <!--  <WebView 
	       	android:id="@+id/content_text"
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:scrollbars="none"
	       />-->
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="10dp"
    	android:background="@drawable/category_gradient_9"
	    />
	<LinearLayout
	    android:id="@+id/bottom_layout"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_margin="6dp"
    	android:orientation="horizontal"
    	android:gravity="center_vertical"
	    >
	   <LinearLayout 
	        android:id="@+id/favorite_user_btn"
	        android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
	        >
		    <ImageView
		        android:id="@+id/favorite_user_img"
		        android:layout_width="60dp"
		        android:layout_height="30dp"
		        android:layout_margin="3dp"
		        android:src="@drawable/icon_ad_favorite_users_false"
		        />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/favorite_ad_btn"
	        android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
	        >
		    <ImageView
		        android:id="@+id/favorite_ad_img"
		        android:layout_width="60dp"
		        android:layout_height="30dp"
		        android:layout_margin="3dp"
		        android:src="@drawable/icon_ad_favorite_false"
		        />
	    </LinearLayout>
		<EditText
			android:id="@+id/edit_add_comment"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_weight="3"
			android:hint="@string/comment_add_hint"
			android:textSize="14sp"
			android:inputType="text"
		/>
		<LinearLayout 
	        android:layout_width="50dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
	        >
		    <Button 
		        android:id="@+id/btn_add_comment"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:textColor="@android:color/white"
		    	android:textSize="14sp"
		    	android:textStyle="bold"
		    	android:background="@drawable/selector_circle_button"
		        />
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
