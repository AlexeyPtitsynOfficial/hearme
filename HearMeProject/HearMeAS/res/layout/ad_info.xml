<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
        android:id="@+id/ad_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ad_title_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="@drawable/category_gradient_2"
            >
            <TextView
	            android:id="@+id/ad_title"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="center"
	        	android:textStyle="bold"
		        android:textColor="@android:color/white"
	        	android:textSize="20sp"
            />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:scrollbars="none"
            >
            <LinearLayout
                android:id="@+id/cat_scroller"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
                ></LinearLayout>
        </HorizontalScrollView>
	    <WebView 
	        android:id="@+id/webview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="7dp"
	        />
	    <com.donearh.hearme.FileImageScroller
		        android:id="@+id/image_scroller"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="7dp"
		        android:layout_marginRight="7dp"
		        >
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		        </LinearLayout>
		</com.donearh.hearme.FileImageScroller>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="7dp"
		    android:orientation="horizontal"
		    android:background="@android:color/white"
		    >
		    <Button
		        android:id="@+id/email_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_margin="5dp"
		        android:textSize="16sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"
		        android:text="@string/ad_email"
		        android:background="@drawable/selector_email"
		        />
		    <Button
		        android:id="@+id/call_btn"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_margin="5dp"
		        android:textSize="16sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"
		        android:text="@string/call"
		        android:background="@drawable/selector_button"
		        />
		</LinearLayout> 
	</LinearLayout>
</LinearLayout>
