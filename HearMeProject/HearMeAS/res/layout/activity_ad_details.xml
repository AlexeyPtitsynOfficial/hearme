<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_selector"
    android:orientation="vertical" >

<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    tools:context="com.donearh.hearme.AdDetailsActivity" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    >
    <View 
        android:layout_width="match_parent"
    	android:layout_height="3dp"
    	android:background="@color/eclipse"
        />
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginLeft="7dp"
    	android:layout_marginBottom="8dp"
    	android:layout_marginRight="65dp"
    	android:layout_marginTop="3dp"
    	android:background="@android:color/white"
        >
	    <EditText
	        android:id="@+id/comment_edit"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_margin="5dp"
	    	android:hint="Текст комментария"
	    	android:textColor="@color/night_green"
	        />
    </LinearLayout>
    <Button
        android:id="@+id/comment_btn"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="5dp"
    	android:background="@drawable/selector_circle_button"
        />
</RelativeLayout>

</RelativeLayout>

