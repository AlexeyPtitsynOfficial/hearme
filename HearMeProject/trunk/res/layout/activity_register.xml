	        <android.support.v7.widget.CardView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout 
			        android:layout_width="match_parent"
			   	 	android:layout_height="wrap_content"
			   	 	android:orientation="vertical"
			   	 	android:padding="10dp"
			        >
				    <TextView
				        android:id="@+id/login"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/login_text"
				        android:layout_marginTop="10dp"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				
				    <EditText
				        android:id="@+id/edit_login"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
				        android:inputType="textEmailAddress" />
				    <TextView
				        android:id="@+id/email"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/email_text"
				        android:layout_marginTop="10dp"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				
				    <EditText
				        android:id="@+id/edit_email"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:hint="@string/hint_email_example"
				        android:inputType="textEmailAddress" />
				</LinearLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout 
			        android:layout_width="match_parent"
			   	 	android:layout_height="wrap_content"
			   	 	android:orientation="vertical"
			   	 	android:padding="10dp"
			        >
				    <TextView
				        android:id="@+id/pass"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/pass_text"
				        android:layout_marginTop="10dp"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        />
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/role_pass_character"
				        android:textSize="12sp"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        />
				
				    <EditText
				        android:id="@+id/edit_pass"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:hint="@string/hint_reg_edit"
				        android:inputType="textPassword" />
				
				    <TextView
				        android:id="@+id/pass_confirm"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/pass_confirm_text"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				
				    <EditText
				        android:id="@+id/edit_pass_conf"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginBottom="10dp"
				        android:ems="10"
				        android:hint="@string/hint_reg_edit"
				        android:inputType="textPassword" />
		    	</LinearLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout 
			        android:layout_width="match_parent"
			   	 	android:layout_height="wrap_content"
			   	 	android:orientation="vertical"
			   	 	android:padding="10dp"
			        >
				     <TextView
				        android:id="@+id/display_name"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="10dp"
				        android:text="@string/display_name"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				     <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/display_name_text"
				        android:textSize="12sp"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        />
				
				    <EditText
				        android:id="@+id/edit_display_name"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:ems="10"
				        android:maxLength="100"
				        android:inputType="textEmailAddress" />
				    
				    <!-- <TextView
				        android:id="@+id/avatar_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/select_avatar"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				    <ImageButton 
					        android:id="@+id/avatar"
					        android:layout_width="70dp"
					        android:layout_height="70dp"
					        android:layout_margin="10dp"
					        android:background="@drawable/selector_circle_button2"
					        android:src="@drawable/icon_ad_add"
					        /> -->
				    <TextView
				        android:id="@+id/desc_text"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/org_desc"
				        android:visibility="gone"
				        android:textColor="@color/night_green"
				        android:textStyle="bold"
				        android:textAppearance="?android:attr/textAppearanceMedium" />
				
				    <EditText
				        android:id="@+id/edit_desc"
				        android:layout_width="match_parent"
				        android:layout_height="100dp"
				        android:ems="10"
				        android:maxLength="250"
				        android:visibility="gone"
				        android:gravity="top"
				        android:inputType="textMultiLine" />
		    	</LinearLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout 
			        android:layout_width="match_parent"
			   	 	android:layout_height="wrap_content"
			   	 	android:orientation="vertical"
			   	 	android:padding="10dp"
			        >
				    <CheckBox 
				        android:id="@+id/confirm_policy"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/confirm_policy"
				        />
		    	</LinearLayout>
	        </android.support.v7.widget.CardView>
	        <android.support.v7.widget.CardView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    card_view:cardBackgroundColor="@android:color/white"
			    card_view:cardCornerRadius="2dp"
			    android:layout_marginBottom="6dp">
			    <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="70dp"
				    android:layout_gravity="bottom"
				    android:gravity="center" >
				    <Button 
				        android:id="@+id/confirm_reg"
				        android:layout_width="200dp"
				    	android:layout_height="50dp"
				    	android:textColor="@android:color/white"
				    	android:textSize="14sp"
				    	android:textStyle="bold"
				    	android:text="@string/register"
				    	android:background="@drawable/selector_button"
		        	/>
		    		<ProgressBar
		    		    android:id="@+id/register_progress"
		    		    android:layout_width="40dp"
		    		    android:layout_height="40dp"
		    		    android:visibility="gone"
		    		    ></ProgressBar>
				</LinearLayout>
			</android.support.v7.widget.CardView>
		</LinearLayout>
		
	</ScrollView>

	
</LinearLayout>